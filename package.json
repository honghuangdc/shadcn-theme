{
  "name": "@soybeanjs/shadcn-theme",
  "version": "0.2.0",
  "description": "A powerful and flexible shadcn/ui theme generator with support for dynamic CSS variable injection, preset color schemes, and light/dark mode switching.",
  "homepage": "https://github.com/soybeanjs/shadcn-theme",
  "bugs": {
    "url": "https://github.com/soybeanjs/shadcn-theme/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "repository": {
    "url": "https://github.com/soybeanjs/shadcn-theme.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsdown",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "dev": "tsup --watch",
    "fmt": "oxfmt",
    "lint": "oxlint --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm publish --access public",
    "release": "soy release",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "upkg": "soy ncu"
  },
  "dependencies": {
    "@soybeanjs/colord": "^0.4.2"
  },
  "devDependencies": {
    "@soybeanjs/cli": "1.5.0",
    "@types/node": "25.2.1",
    "lint-staged": "16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.20.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "oxlint --fix && oxfmt"
  },
  "packageManager": "pnpm@10.28.2"
}
